Table users {
  id integer [pk, increment]
  name TEXT [not null]
  password varchar [not null]
  email varchar [not null, unique]
  reputation decimal [ref: < reviews.rating]
  reviews integer [ref: > reviews.id]
}

Table items {
  id integer [pk, increment]
  itemname varchar [not null]
  itemdesc varchar [not null]
  price decimal
  user_id integer [ref: - users.id]
  item_picture TEXT
  cat TEXT
  condition TEXT
}

Table reviews {
  id integer [pk, increment]
  reviewer integer [ref: - users.id]
  receiver integer [ref: - users.id]
  rating integer
  comment TEXT
}
